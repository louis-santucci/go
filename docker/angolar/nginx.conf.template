server {
  listen      80 default_server;
  listen      [::]:80 default_server;
  server_name ${IP};

  return 301 https://$server_name$request_uri;
}

server {
	listen      443 ssl;
	listen      [::]:443 ssl;
	server_name ${IP};

  include snippets/self-signed.conf;
  include snippets/ssl-params.conf;

  location / {
      root   /usr/share/nginx/html;
      index  index.html index.htm;
  }
}